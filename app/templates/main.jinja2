<!DOCTYPE html><html>

<head>
    <title>News Web Comics</title>
    <link rel="stylesheet" type="text/css" href="static/css/main.css">
    <script>
    </script>
</head>
<body>

<div id="content">
{% block body %}


{%- for comic in comics -%}
    <h1>
        {%- if comic['unread'] -%}
        <span class='new'>New</span>
        {%- endif -%}
        <a href="{{ comic['comic_url']|e }}">{{ comic['comic_name']|e }}:</a>
        {{ comic['comic_title']|e }}
    </h1>
    {% if comic['comic_class'] %}
        <img class="{{ comic['comic_class']|e }}" src="{{ comic['image_src']|e }}">
    {%- else -%}
        <img src="{{ comic['image_src']|e }}">
    {%- endif -%}
{%- endfor -%}

{% endblock body %}
</div>

</body></html>

