<!DOCTYPE html><html>

<head>
    <meta charset="utf-8">
    <title>News Web Comics</title>
    <link rel="stylesheet" type="text/css" href="static/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="static/js/comic_changer.js"></script>
    <script>
let js_offsets = {{ js_vars['js_offsets'] }};
let js_comics = {{ js_vars['js_comics'] }};
    </script>

    <style>
    .prevButton, .nextButton {
        background-color: lightblue;
        border: 2px solid darkblue;
        margin: 2px 10px;
        padding: 5px 10px;
        width: 200px;
    }
    </style>
</head>
<body>

<div id="content">
{% block body %}


{%- for key in comics.keys() -%}
    {%- for comic in comics[key] -%}
    {% if loop.first %}

        <div class="comicContainer">
            <h1>

                {#
                    {%- if comic['unread'] -%}
                    <span class='title'>Title</span>
                    {%- endif -%}
                    #}

                <a class="comicUrl" href="{{ comic['url']|e }}">
                    {{ comic['name']|e }}:</a>

                <span class='comicTitle'>{{ comic['title']|e }}</span>
            </h1>

            {%- if comic['has_prev'] -%}
                <span class="prevButton"> ← older</span>
                <span class="nextButton">newer → </span>
                <br>
            {%- endif %}
            {% if comic['class'] %}
                <img class="comicImage {{ comic['class']|e }}" src="{{ comic['image_src']|e }}">
            {%- else -%}
                <img class="comicImage" src="{{ comic['image_src']|e }}">
            {%- endif -%}

        </div>

    {% endif %}
    {%- endfor -%}
    }
{%- endfor -%}

{% endblock body %}
</div>

</body></html>

